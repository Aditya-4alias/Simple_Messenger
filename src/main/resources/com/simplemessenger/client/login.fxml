<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.simplemessenger.client.LoginController"
      alignment="CENTER"
      spacing="20"
      stylesheets="@chat.css"
      styleClass="login-container"
      prefWidth="400" prefHeight="400">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <HBox alignment="CENTER" spacing="8">
        <ImageView fitWidth="36" fitHeight="36" preserveRatio="true">
            <image>
                <Image url="@/com/simplemessenger/client/comment.png"/>
            </image>
        </ImageView>
        <Label text="â˜• Simple Messenger" styleClass="app-title"/>
    </HBox>

    <TextField fx:id="usernameField" promptText="Enter your username" styleClass="input-field"/>
    <TextField fx:id="ipField" promptText="Server IP (e.g. 192.168.1.10)" styleClass="input-field"/>

    <Button text="Login" onAction="#login" styleClass="send-button"/>
    <Label fx:id="statusLabel" textFill="#7d6a57" wrapText="true" alignment="CENTER"/>
</VBox>

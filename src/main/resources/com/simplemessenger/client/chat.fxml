<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.simplemessenger.client.ChatController"
            stylesheets="@chat.css">

    <left>
        <VBox spacing="10" styleClass="user-list" prefWidth="200">
            <padding><Insets top="15" right="10" bottom="15" left="10"/></padding>
            <Label text="Online Users" styleClass="user-list-title"/>
            <ListView fx:id="userList" prefHeight="400"/>
        </VBox>
    </left>

    <center>
        <VBox fx:id="chatContainer" spacing="10" styleClass="chat-container" BorderPane.alignment="CENTER">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

            <HBox spacing="8" alignment="CENTER_LEFT">
                <ImageView fitWidth="28" fitHeight="28" preserveRatio="true">
                    <image><Image url="@/com/simplemessenger/client/comment.png"/></image>
                </ImageView>
                <Label fx:id="chatTitle" text="Select a user to start chatting..." styleClass="chat-title"/>
            </HBox>

            <ScrollPane fx:id="chatScroll" fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                <VBox fx:id="chatArea" spacing="6">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                </VBox>
            </ScrollPane>

            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="messageField" promptText="Type your message..." HBox.hgrow="ALWAYS" styleClass="input-field"/>
                <Button fx:id="sendButton" text="Send" onAction="#sendMessage" styleClass="send-button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
